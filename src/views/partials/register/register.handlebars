<div id="conteinerForm" class="absolute bg-[#0000008a] h-screen w-[100vw] flex items-center justify-center hidden">
    <div class="absolute top-15 right-10 ">
        <button  onclick="viewRegister()" type="button" class="text-white cursor-pointer">FECHAR</button>
    </div>
    <form action="" class="flex">
        <input id="name-user" class="border-2 py-2 px-3 rounded-2xl w-[30vw] mr-2 text-white" type="text" placeholder="Digite nome do aluno...">
        <button onClick="registerUser()" type="button" class="mr-2 bg-white text-black py-2 px-3 rounded-2xl font-bold cursor-pointer duration-200 hover:scale-110">CADASTRAR</button>
    </form>
    <!---->
    <script>
        function viewRegister () {
            document.querySelector('#conteinerForm').classList.toggle('hidden');
        } 

        async function registerUser(){
            
            const nameUser = document.querySelector('#name-user').value;

            if(nameUser){
                await fetch('http://localhost:3000/register', {
                    method: 'POST',
                    headers: {
                        "Content-Type" : "Application/json",
                    },
                    body: JSON.stringify({
                        name: nameUser,
                    })
                })  
            };  
        }
    </script>
</div>